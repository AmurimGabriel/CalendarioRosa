<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFC0CB"
    tools:context="com.example.aluno.calendario.MainActivity">

    <!--android:text="@string/Calendario"-->


    <Button
        android:id="@+id/btnLembretes"
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:layout_alignBottom="@+id/btnCalendar"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/btnCalendar"
        android:layout_marginEnd="51dp"
        android:layout_weight="0.01"
        android:background="@drawable/ic_lembretes" />

    <Button
        android:id="@+id/btnCalendar"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/imvLogo"
        android:layout_marginStart="60dp"
        android:layout_marginTop="24dp"
        android:layout_weight="0.02"
        android:background="@drawable/ic_calendar" />

    <Button
        android:id="@+id/btnEventos"
        android:layout_width="105dp"
        android:layout_height="105dp"
        android:layout_marginTop="15dp"
        android:layout_weight="0.03"
        android:background="@drawable/ic_ong"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/imvLogo"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:adjustViewBounds="true"
        android:background="@drawable/logo2" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calendario"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textSize="20sp"
        android:layout_below="@+id/btnCalendar"
        android:layout_alignEnd="@+id/btnCalendar"
        />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lembretes"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textSize="20sp"
        android:layout_below="@+id/btnLembretes"
        android:layout_alignEnd="@+id/btnLembretes" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ONG (Site)"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textSize="20sp"
        android:layout_below="@+id/btnEventos"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
