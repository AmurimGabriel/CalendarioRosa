<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context="com.example.aluno.calendario.ListDataActivity">

    <RelativeLayout
        android:id="@+id/relativeLayout3"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="#FFC0CB"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <TextView
            android:id="@+id/btnVoltar"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="29dp"
            android:background="@drawable/close"
            android:textColor="#ffffff"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/btnAdd"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="@drawable/plus"
            android:textColor="#ffffff"
            android:textSize="30sp"
            android:layout_alignBaseline="@+id/btnVoltar"
            android:layout_alignBottom="@+id/btnVoltar"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="28dp" />

        <TextView

            android:id="@+id/btnCancelar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:text="Lembretes Deste Dia"
            android:textColor="#ffffff"
            android:textSize="20sp" />

    </RelativeLayout>

    <TextView
        android:id="@+id/txtTemNada"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="         Não há lembretes para este dia"
        android:layout_marginTop="32dp"
        android:layout_below="@+id/relativeLayout3"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:textSize="20sp"/>

    <ListView
        android:layout_width="340dp"
        android:layout_height="match_parent"
        android:id="@+id/listView"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/relativeLayout3" >

    </ListView>


</RelativeLayout>
