<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.aluno.calendario.CalendarioActivity"
    >

    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="551dp"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp">

        <com.applandeo.materialcalendarview.CalendarView
            android:id="@+id/calendarView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:headerColor="#FFC0CB"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:selectionColor="#FFC0CB"
            app:todayLabelColor="@color/colorAccent"
            app:monthsNames="@array/Meses"
            app:daysNames="@array/Semana"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />


        <android.support.design.widget.FloatingActionButton
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:src="@drawable/calendartoday"
        android:id="@+id/btnToday"
        android:layout_marginRight="23dp"
        android:layout_marginEnd="34dp"
        android:layout_alignTop="@+id/btnAdc"
        android:layout_toStartOf="@+id/btnAdc" />



        <android.support.design.widget.FloatingActionButton
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:src="@drawable/plus"
            android:id="@+id/btnAdc"
            android:layout_marginBottom="36dp"
            android:layout_marginRight="62dp"
            android:layout_marginLeft="220dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="32dp" />

    </RelativeLayout>


</android.support.constraint.ConstraintLayout>
