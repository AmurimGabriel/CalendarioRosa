    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logoapp"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:screenOrientation="locked" />
        <activity
            android:name=".CalendarioActivity"
            android:screenOrientation="locked" />
        <activity
            android:name=".OngActivity"
            android:screenOrientation="locked" />
        <activity
            android:name=".FormAddLembretesActivity"
            android:screenOrientation="locked" />
        <activity
            android:name=".ListLembretesActivity"
            android:screenOrientation="locked" />
        <activity
            android:name=".SplashActivity"
            android:screenOrientation="locked">
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".AdapterItemActivity" />
        <activity
            android:name=".ListDataActivity"
            android:screenOrientation="locked" />
        <activity android:name=".AdapterAnotacoes"></activity>
    </application>

</manifest>